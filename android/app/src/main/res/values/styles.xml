    <style name="UnderLinedSpinner" parent="android:Widget.Spinner">
        <!-- Color when pressed -->
        <item name="colorAccent">#FFF</item>
        <!-- Default color for the dropdown arrow and line -->
        <item name="colorControlNormal">#FFF</item>
        <item name="android:background">@color/White</item>
    </style>
    <style name="spinner_edit" parent="android:Widget.Spinner">
        <!-- Color when pressed -->
        <item name="colorAccent">@color/colorPrimary</item>
        <!-- Default color for the dropdown arrow and line -->
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="android:background">@color/White</item>
    </style>
    <style name="TextMedium" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>
    <style name="TextSmall" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>
    <style name="ProfileEditTextSmall" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColor">@color/Black</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>
    <style name="ProfileMedicalText" parent="@style/Widget.AppCompat.TextView">
        <!--<item name="android:textColor">@drawable/profile_text_color</item>-->
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>

    <style name="MainProfileLabel" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>
    <style name="MainProfileValue" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">@dimen/sub_small_text_size</item>
    </style>
    <style name="TeamNameTitle" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/fan_card_swipe_heart_val</item>
    </style>

    <!-- Added due to TextInput error in RN -->
    <style name="AppEditTextStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_top</item>
        <item name="android:windowExitAnimation">@anim/slide_out_top</item>
    </style>

